<!doctype html>
<html lang="en">
<head>
  <%- include('layout/head') %>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <%- include('layout/navbar') %>

  <div class="container my-5">
    <div class="row">
      <div class="col-md-6">
        <img src="/uploads/<%= product.image %>" class="img-fluid" alt="<%= product.name %>">
      </div>
      <div class="col-md-6">
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <h3>$<%= product.price %>.00</h3>

        <% if (product.stock>0) { %>
            <button class="cart-button" data-id="<%= product._id %>" onclick="addToCart()">Add to Cart</button>
          <% } else { %>
            <button class="cart-button">Out of stock</button>
           
          <% } %>
      </div>
    </div>
  </div>
 
  <footer class="footer-section">
    <%- include('layout/footer') %>
  </footer>
  <!-- End Footer Section -->	


  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/tiny-slider.js"></script>
  <script src="/js/custom.js"></script>
  <script>
    document.querySelectorAll('.cart-button').forEach(button => {
      button.addEventListener('click', async (event) => {
        const isDisabled = event.target.hasAttribute('disabled');
        
        if (isDisabled) {
          // Show SweetAlert for out of stock
          Swal.fire({
            icon: 'warning',
            title: 'Out of Stock',
            text: 'This product is currently out of stock.',
            showConfirmButton: true
          });
          return;
        }
  
        // Handle adding to cart for available items
        const productId = event.target.getAttribute('data-id');
        console.log(productId, 'id');
  
        const response = await fetch('/cart/add-to-cart', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ productId })
        });
        const data = await response.json();
        console.log(data, 'res');
  
        // Show success message with SweetAlert
        if (response.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Added to Cart',
            text: data.message,
            showConfirmButton: false,
            timer: 1500
          });
        } else {
          // Show error message if thereâ€™s an issue
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Could not add to cart.',
            showConfirmButton: true
          });
        }
      });
    });
  </script>
<script>
  // Initialize cart count
  let cartCount = 0;

  function addToCart() {
    cartCount++;
    document.getElementById("cartCount").innerText = cartCount;
  }
</script>
</body>
</html>